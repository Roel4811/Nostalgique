<div class="container">
  <div class="row justify-content-center">
    <div class="col-xs-auto">
      <div class="log-in-card">
        <h3>Log In</h3>
        <%= simple_form_for :member, url: create_log_in_members_path, method: :post do |f| %>
          <%= f.error_notification %>
          <%= f.input :email, label: 'Email' %>
          <%= f.input :password, label: 'Password' %>
          <div class="form-action">
            <%= f.submit 'Log in', class: "button-standard" %>
          </div>
          <%= link_to "Forgotten password?", new_password_reset_members_path %>
        <% end %>
      </div>
    </div>
  </div>
</div>
