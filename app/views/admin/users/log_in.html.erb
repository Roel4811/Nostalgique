<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-auto">
      <% if !current_user %>
        <div class="admin-log-in">
          <h1 class="font-bold"><%= 'Log in' %></h1>
          <%= simple_form_for(:user, url: create_log_in_admin_users_path, method: :post) do |f| %>
            <%= f.error_notification %>

            <div class="form-inputs">
              <%= f.input :email, class: "input-large" %>
              <%= f.input :password, class: "input-large" %>
            </div>

            <div class="form-actions">
              <%= f.button :button, 'Log in', class: "btn btn-primary" %>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
