<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <% if !current_user %>
      <h1><%= 'Log in' %></h1>

      <%= simple_form_for(:user, url: admin_sign_in_user_path, method: :post) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :email %>
          <%= f.input :password %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, 'Submit' %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
