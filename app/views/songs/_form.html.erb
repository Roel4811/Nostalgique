<%= simple_form_for @song do |f| %>
  <%= f.error_notification %>
  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :artist %>
    <%= f.input :lyrics %>
    <%= f.input :image %>
  </div>
  <div class="form-actions">
    <%= f.button :submit, class: 'btn-success' %>
  </div>

<% end %>
