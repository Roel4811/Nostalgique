<div class="container">
  <h1>Let's translate!</h1>

  <%= simple_form_for @song do |f| %>
    <%= f.error_notification %>
    <div class="song-lyrics">
      <p><%= @song.lyrics %></p>
    </div>
    <div class="form-inputs">
      <%= f.input :lyrics_en %>
    </div>
    <div class="form-actions">
      <%= f.button :submit, class: 'btn-success' %>
    </div>

  <% end %>
</div>
