<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
      <div class="add-song-card">
        <h3>Let's add a song!</h3>
        <%= simple_form_for @song_wizard, as: :song_wizard, url: validate_step_song_path do |f| %>
          <%= f.error_notification %>

          <%= hidden_field_tag :current_step, 'step1' %>
          <%= f.input :name, label: 'What is the name of the song?', error: 'Please specify song name' %>
          <div class="form-action">
            <%= f.submit 'Continue', class: "button-standard" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
