<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
      <div class="log-in-card">
        
        <%= form_tag '/login' do %>

          <br>
          <div class="form-group">
            <strong>Email: </strong>
            <%= text_field_tag :email %>
            <br>
          </div>

          <div class="form-group">
            <strong>Password: </strong>
            <%= password_field_tag :password %>
            <br>
          </div>

          <%= submit_tag "Submit" %>

        <% end %>
      </div>
    </div>
  </div>
</div>
